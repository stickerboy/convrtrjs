<header>
    <nav id="navbar" class="navbar fixed-top navbar-dark bg-convrtr shadow-sm">
        <div class="container-fluid mw">
            <a href="{% if data.environment == 'development' %}http://localhost:8088/{% else %}{{ pkg.homepage }}{% endif %}" 
               class="navbar-brand text-white mb-0 h1 fw-light me-auto me-md-3" title="Home">
                {% if data.environment == 'development' %}<i class="bi bi-braces-asterisk"></i> {% endif %}{{ pkg.sitename }}
            </a>
            <div class="d-flex">
                <span class="navbar-text text-white mx-0 mx-md-3 fs-5">
                    {{ pkg.tagline }}
                </span>
                <ul class="navbar-nav mx-0 mx-md-2 flex-row">
                    <li class="nav-item">
                        <a class="btn btn-md btn-link text-light" aria-label="Discord support server" 
                            title="Discord" href="{{ pkg.support }}" title="Discord"
                            data-bs-toggle="tooltip" data-bs-placement="bottom">
                            <i class="bi bi-discord"></i>
                            <span class="visually-hidden mx-2" focusable="false" aria-hidden="false">Join the discord</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="btn btn-md btn-link text-light" aria-label="Github code repository" 
                            title="Github" href="{{ pkg.repository.site }}" title="Github"
                            data-bs-toggle="tooltip" data-bs-placement="bottom">
                            <i class="bi bi-github"></i>
                            <span class="visually-hidden mx-2" focusable="false" aria-hidden="false">Github</span>
                        </a>
                    </li>
                {% if page-id != "fourohfour" %}
                    <li class="nav-item">
                        <button type="button" class="btn btn-md btn-link text-light btn-reset-data" id="resetData" 
                                aria-label="Clear all data inside textareas" title="Clear data"
                                data-bs-toggle="tooltip" data-bs-placement="bottom">
                            <i class="bi bi-recycle"></i>
                            <span class="visually-hidden mx-2" focusable="false" aria-hidden="false">Clear all data</span>
                        </button>
                    </li>
                {% endif %}
                    <li class="nav-item dropdown" data-bs-toggle="tooltip" data-placement="bottom" data-bs-trigger="hover" data-bs-title="Toggle theme">
                        <button class="btn btn-md btn-link btn-theme text-light dropdown-toggle d-flex align-items-center" id="bd-theme" type="button" 
                        aria-expanded="false" data-bs-toggle="dropdown" aria-label="Toggle theme (auto)" 
                        data-current-icon="bi-circle-half">
                            <i class="bi my-1 theme-icon-active bi-circle-half"></i>
                            <span class="visually-hidden ms-2" focusable="false" aria-hidden="false" id="bd-theme-text">Toggle theme</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end position-absolute"" aria-labelledby="bd-theme-text">
                            <li>
                                <button type="button" class="dropdown-item d-flex align-items-center" 
                                data-bs-theme-value="light" aria-pressed="false" data-theme-icon="bi-sun-fill">
                                    <i class="bi me-2 opacity-50 theme-icon bi-sun-fill"></i>
                                    Light
                                    <i class="bi ms-auto d-none bi-check2"></i>
                                </button>
                            </li>
                            <li>
                                <button type="button" class="dropdown-item d-flex align-items-center" 
                                data-bs-theme-value="dark" aria-pressed="false" data-theme-icon="bi-moon-stars-fill">
                                    <i class="bi me-2 opacity-50 theme-icon bi-moon-stars-fill"></i>
                                    Dark
                                    <i class="bi ms-auto d-none bi-check2"></i>
                                </button>
                            </li>
                            <li>
                                <button type="button" class="dropdown-item d-flex align-items-center active" 
                                data-bs-theme-value="auto" aria-pressed="true" data-theme-icon="bi-circle-half">
                                    <i class="bi me-2 opacity-50 theme-icon bi-circle-half"></i>
                                    Auto
                                    <i class="bi ms-auto d-none bi-check2"></i>
                                </button>
                            </li>
                        </ul>
                    </li>
                </ul>
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navigation" 
                        aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <div class="offcanvas offcanvas-end bg-convrtr" id="navigation" tabindex="-1" aria-labelledby="navLabel" data-bs-scroll="true">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title text-light" id="navLabel">Menu</h5>
                    <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    {% include 'layout/nav' %}

                    <a class="btn btn-md btn-link text-light text-decoration-none" aria-label="Discord" href="{{ pkg.support }}">
                        <i class="bi bi-discord"></i>
                        <span class="mx-2">Join the Discord</span>
                    </a>
                    <a class="btn btn-md btn-link text-light text-decoration-none" aria-label="Github" href="{{ pkg.repository.site }}">
                        <i class="bi bi-github"></i>
                        <span class="mx-2">Convrtr on Github</span>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>