---
layout: layout.liquid
---

<section class="section changelog">
    <article class="py-4 px-3 px-sm-4" data-pagefind-weight="0.1">
        {{ content }}

        {%- if tags contains "release" %}
        <div class="mt-4">
            <a class="btn btn-convrtr" href="{{ pkg.releases.url }}/tag/v{{ page.fileSlug }}-Release">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-github"
                    viewBox="0 0 16 16" role="img">
                    <title>GitHub logo</title>
                    <path
                    d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27s1.36.09 2 .27c1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.01 8.01 0 0 0 16 8c0-4.42-3.58-8-8-8" />
                </svg>  
                View on GitHub
            </a>
        </div>
        {%- endif %}
    </article>

    {%- assign versions = collections.versions -%}
    {%- assign currentIndex = -1 -%}
    {%- assign latest = null -%}
    {%- assign earliest = null -%}
    {%- assign last = null -%}

    {%- for item in versions %}
        {%- if forloop.first %}
            {%- assign latest = item %}
        {%- endif %}
        {%- if forloop.last %}
            {%- assign earliest = item %}
            {%- assign last = forloop.index0 %}
        {%- endif %}
        {%- if item.url == page.url %}
            {%- assign currentIndex = forloop.index0 -%}
        {%- endif %}
    {%- endfor %}

    {%- assign nextIndex = currentIndex | minus: 1 -%}
    {%- assign prevIndex = currentIndex | plus: 1 %}

    <nav class="version-nav px-4 pt-2" aria-label="Next and previous changelog items">
        <ul class="pagination pagination-sm justify-content-between m-0">
            <li class="page-item">
                <div class="btn-group d-flex flex-row" role="group">
                    {%- unless currentIndex == 0 %}
                    <a class="btn btn-outline-convrtr border-light-subtle py-2 px-3 rounded{% if nextIndex >= 0 %}-sm-start{% endif %} fw-normal" href="{{ latest.url }}" title="Latest changelog">
                        &laquo; <span class="d-none d-sm-inline-flex">Latest</span>
                    </a>
                    {%- endunless %}
                    {%- if nextIndex >= 0 %}
                    {%- assign next = versions[nextIndex] %}
                    <a class="btn btn-outline-convrtr border-light-subtle py-2 px-3 rounded-end rounded-start-0 fw-normal" href="{{ next.url }}" title="Next changelog: v{{ next.data.title }}">
                        &#8678; <span class="d-none d-sm-inline-flex">Next:&nbsp;</span> v{{ next.data.title }}
                    </a>
                    {%- endif %}
                </div>
            </li>
            <li class="page-item">
                <div class="btn-group d-flex flex-row" role="group">
                    {%- if prevIndex < versions.size %}
                    {%- assign prev = versions[prevIndex] %}
                    <a class="btn btn-outline-convrtr border-light-subtle py-2 px-3 rounded-start rounded-end-0 fw-normal" href="{{ prev.url }}" title="Previous changelog: v{{ next.data.title }}">
                        <span class="d-none d-sm-inline-flex">Previous:&nbsp;</span> v{{ prev.data.title }} &#8680;
                    </a>
                    {%- endif %}
                    {%- unless currentIndex == last %}
                    <a class="btn btn-outline-convrtr border-light-subtle py-2 px-3 rounded{% if prevIndex < versions.size %}-sm-end{% endif %} fw-normal" href="{{ earliest.url }}" title="Earliest changelog">
                        <span class="d-none d-sm-inline-flex">Earliest</span> &raquo;
                    </a>
                    {%- endunless %}
                </div>
            </li>
        </ul>
    </nav>
</section>