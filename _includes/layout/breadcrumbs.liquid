{% if page.url != "/" %}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb justify-content-end mb-0">
        <li class="breadcrumb-item">
            {% if page.url == "/" %}
            Home
            {% else %}
            <a href="{{ '/' | url }}" class="text-convrtr">
                <i class="bi bi-house-fill me-1" aria-hidden="true" focusable="false"></i>Home
            </a>
            {% endif %}
        </li>
        {% if folderName and folderName != "pages" %}
        {% if folderName != "text" %}
        <li class="breadcrumb-item">
            <a href="{{ folderName | prepend: '/' | url }}" class="text-convrtr">{{ folderName }}</a>
        </li>
        {% endif %}
        {% endif %}
        {% if page.inputPath contains "changelog/" %}
        <li class="breadcrumb-item">
            <a href="{{ '/changelog' | url }}" class="text-convrtr">changelog</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">
            v{{ page.fileSlug }}
        </li>
        {% elsif page.url contains "/tag/" %}
        <li class="breadcrumb-item">
            <a href="{{ '/changelog' | url }}" class="text-convrtr">changelog</a>
        </li>
        {%- assign tag = page.url | split: '/' | last -%}
        <li class="breadcrumb-item active" aria-current="page">
            {{ tag }}
        </li>
        {% else %}
        <li class="breadcrumb-item active" aria-current="page">
            {{ page-id | lowercase }}
        </li>
        {% endif %}
    </ol>
</nav>
{% endif %}