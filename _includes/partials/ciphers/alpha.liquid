<section id="alpha" class="section">
    <div class="py-4 px-2 px-sm-4">
        <div class="section-heading mb-4">
            <a class="d-flex justify-content-between section-toggle text-decoration-none"
                data-bs-toggle="collapse" href="#alphaCollapse" role="button" 
                aria-expanded="false" aria-controls="alphaCollapse">
                <h2 class="display-6 w-100 d-flex m-0">
                    Reverse alphabet
                </h2>
                <span class="text-light px-1 border rounded align-self-end toggle-button">
                    <i class="bi bi-arrow-up lh-base"></i>
                </span>
            </a>
            <hr>
            <p class="px-2">
                Transforms each letter in a string to its mirror image in the alphabet 
                <code class="d-inline-flex px-2 bg-success bg-opacity-10 border border-success border-opacity-10 rounded-2">
                    A ⇆ Z
                </code>
                <code class="d-inline-flex px-2 bg-success bg-opacity-10 border border-success border-opacity-10 rounded-2">
                    B ⇆ Y
                </code>
                etc.
            </p>
        </div>
        <div class="collapse" id="alphaCollapse">
            <div class="col">
                <div class="card">
                    <span class="card-label visually-hidden">Reverse alphabet</span>
                    <div class="card-body text-center">
                        <textarea placeholder="Example: " title="Reverse the alphabet for a string" rows="6" id="alphaText" class="form-control alpha-text" autocomplete="off"></textarea>
                    </div>
                    <div class="card-footer py-3">
                        <div class="d-flex justify-content-start align-items-center">
                            <button type="button" class="btn btn-md btn-convrtr" id="alphaDecode" title="Generate">Generate</button>
                            {% include "components/select-copy-dl" %}
                        </div>
                        <hr />
                        <div id="alphaResults" class="data-to-copy active"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>