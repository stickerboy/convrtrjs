<section id="flip" class="section">
    <div class="py-4 px-2 px-sm-4">
        <div class="section-heading mb-4">
            <a class="d-flex justify-content-between section-toggle text-decoration-none"
                data-bs-toggle="collapse" href="#flipCollapse" role="button" 
                aria-expanded="false" aria-controls="flipCollapse">
                <h2 class="display-6 w-100 d-flex m-0">
                    Flip text
                </h2>
                <span class="text-light px-1 border rounded align-self-end toggle-button">
                    <i class="bi bi-arrow-up lh-base"></i>
                </span>
            </a>
            <hr>
            <p class="px-2">
                Flip text upside down - allows you to turn this into ʇɥıs
            </p>
        </div>
        <div id="flipCollapse" class="collapse">
            <div class="col">
                <div class="card">
                    <span class="card-label visually-hidden">Flip Text</span>
                    <div class="card-body text-center">
                        <label for="flipText" class="visually-hidden">Flip text upside down</label>
                        <textarea placeholder="Example: TEST → ┴SƎ┴" rows="6" id="flipText" class="form-control flip-text" autocomplete="off"></textarea>
                    </div>
                    <div class="card-footer py-3">
                        <div class="d-flex justify-content-start align-items-center">
                            <button type="button" class="btn btn-md btn-convrtr" id="flipDecode" title="Flip text upside down">Flip</button>
                            <div class="form-check form-switch mx-2">
                                <input class="form-check-input" type="checkbox" role="switch" id="flipDirection" aria-checked="false">
                                <label class="form-check-label" for="flipDirection">Reverse</label>
                            </div>
                            {% include "components/select-copy-dl" %}
                        </div>
                        <hr />
                        <div id="flipResults" class="data-to-copy active"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>