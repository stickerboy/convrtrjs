<section id="replace" class="section">
    <div class="py-4 px-2 px-sm-4">
        <div class="section-heading mb-4">
            <div class="d-flex justify-content-between section-toggle"
                data-bs-toggle="collapse" href="#replaceCollapse" role="button" 
                aria-expanded="false" aria-controls="replaceCollapse">
                <h2 class="display-6 w-100 d-flex m-0">
                    Replace characters
                </h2>
                <span class="text-light px-1 border rounded align-self-end toggle-button">
                    <i class="bi bi-arrow-up lh-base"></i>
                </span>
            </div>
            <hr>
            <p class="px-2">
                Replace characters in a string - allows replace any characters or phrases in a string with any character or phrase. 
                Supports regex so you can run your own custom advanced replacements
            </p>
        </div>
        <div id="replaceCollapse" class="collapse">
            <div class="col">
                <div class="card">
                    <span class="card-label visually-hidden">Replace characters</span>
                    <div class="card-body text-center">
                        <textarea placeholder="Example: TESTING → ST → EA → TEASING" title="Replace characters in a string" rows="6" id="replaceText" class="form-control replace-text"></textarea>
                    </div>
                    <div class="card-footer py-3">
                        <div class="text-center mb-2 g-0">
                            <div class="row row-cols-2 g-md-0 gx-0 gy-2">
                                <div class="col col-12 col-lg-auto me-2 mb-2">
                                    <div class="input-group w-auto mb-2">
                                        <label class="input-group-text" id="basic-addon1" for="replaceValue">Old<span class="d-none d-md-block">&nbsp;characters</span></label>
                                        <input type="text" class="form-control" id="replaceValue" title="Characters to be replaced, regex is allowed">
                                    </div>
                                    <div class="input-group w-auto">
                                        <label class="input-group-text" id="basic-addon2" for="replacementValue">New<span class="d-none d-md-block">&nbsp;characters</span></label>
                                        <input type="text" class="form-control" id="replacementValue" title="New characters">
                                        <button class="btn btn-outline-convrtr" type="button" id="replaceDecode">Replace</button>
                                    </div>
                                </div>
                                <div class="col d-flex flex-fill mb-2">
                                    <div class="me-auto flex-fill">
                                        <div class="form-check form-switch mx-lg-2 d-flex">
                                            <input class="form-check-input" type="checkbox" role="switch" id="replaceCase">
                                            <label class="form-check-label" for="replaceCase">Case sensitive</label>
                                        </div>
                                        <div class="form-check form-switch mx-lg-2 d-flex">
                                            <input class="form-check-input" type="checkbox" role="switch" id="replaceChain">
                                            <label class="form-check-label" for="replaceChain">Chain commands</label>
                                        </div>
                                    </div>
                                    {% include "components/select-copy-dl" %}
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div id="replaceResults" class="data-to-copy active"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>