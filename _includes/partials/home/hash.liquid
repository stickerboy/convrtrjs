<section id="flip" class="section">
    <div class="py-4 px-2 px-sm-4">
        <div class="section-heading mb-4">
            <label class="display-6" for="hashText">Hash</label>
            <hr>
            <p class="text-dark px-2">
                Generate various hash values for a given text string.
            </p>
        </div>
        <div class="row justify-content-center">
            <div class="col">
                <div class="card">
                    <span class="card-label visually-hidden">Hash text</span>
                    <div class="card-body text-center">
                        <textarea placeholder="Example: " title="Generate hash values for a string" rows="6" id="hashText" class="form-control flip-text"></textarea>
                    </div>
                    <div class="card-footer text-dark py-3">
                        <div class="d-flex justify-content-start align-items-center">
                            <button type="button" class="btn btn-md btn-convrtr" id="hashDecode" title="Generate hashes">Hash</button>
                            <!-- <div class="form-check form-switch mx-2">
                                <input class="form-check-input" type="checkbox" role="switch" id="flipDirection">
                                <label class="form-check-label" for="flipDirection">Reverse</label>
                            </div> -->
                            <div class="btn-group ms-auto">
                                <button type="button" class="btn btn-md btn-light btn-select" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Select All" data-bs-original-title="Select All"><i class="bi bi-check2-square"></i></button>
                                <button type="button" class="btn btn-md btn-light btn-copy" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Copy to clipboard" data-bs-original-title="Copy to clipboard"><i class="bi bi-clipboard"></i></button>
                                <button type="button" class="btn btn-md btn-light btn-download" data-bs-toggle="tooltip" data-bs-placement="top" aria-label="Download" data-bs-original-title="Download"><i class="bi bi-download"></i></button>
                            </div>
                        </div>
                        <hr />
                        <div class="data-to-copy active table-responsive">
                            <table class="table table-striped hash-table">
                                <thead class="table-success">
                                    <tr>
                                        <th scope="col" class="col-3 col-md-2 col-lg-2">Hash Type</th>
                                        <th scope="col">Value</th>
                                    </tr>
                                </thead>
                                <tbody id="hashResults"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>