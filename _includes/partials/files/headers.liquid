<section id="headers" class="section">
    <div class="py-4 px-2 px-sm-4">
        <div class="section-heading mb-4">
            <div class="d-flex justify-content-between section-toggle"
                data-bs-toggle="collapse" href="#headersCollapse" role="button" 
                aria-expanded="false" aria-controls="headersCollapse">
                <h2 class="display-6 w-100 d-flex m-0">
                    File headers
                </h2>
                <span class="text-light px-1 border rounded align-self-end toggle-button">
                    <i class="bi bi-arrow-up lh-base"></i>
                </span>
            </div>
            <hr>
            <p class="px-2">
                A list of common file headers in hexadecimal format, useful if you have a chunk of data so you can quickly match it with a potential file type.
            </p>
        </div>
        <div id="headersCollapse" class="collapse">
            <div class="card">
                <span class="card-label visually-hidden">Hash text</span>
                <div class="card-body bg-light py-3">
                    <div class="d-flex justify-content-start align-items-center">
                        {% include "components/select-copy-dl" %}
                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table class="table table-striped hash-table">
                            <thead class="table-success">
                                <tr>
                                    <th scope="col" class="col-3 col-md-2 col-lg-2">File type</th>
                                    <th scope="col">Header</th>
                                </tr>
                            </thead>
                            <tbody class="data-to-copy active" id="fileResults">
                                {% include "partials/files/headertable" %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>