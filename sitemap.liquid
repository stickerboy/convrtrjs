---
layout: null 
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
{%- assign pageNeverChanges = "changelog-item,search,accessibility,privacy" | split: "," %}
{%- for item in collections.all %}
  {%- unless item.url contains "assets" or item.url contains "tag" %}
    <url>
      <loc>{{ pkg.homepage }}{{ item.url }}</loc>
      {%- if item.data.date %}
      <lastmod>{{ item.data.date | dateISO }}</lastmod>
      {%- else %}
      <lastmod>{{ lastmod | dateISO }}</lastmod>
      {%- endif -%}
      {% if pageNeverChanges contains item.data.page-id %}
      <changefreq>never</changefreq>
      {%- else %}
      <changefreq>monthly</changefreq>
      {%- endif %}
    </url>
  {%- endunless %}
{%- endfor %}
{%- for tag in labels.labels %}
  {%- if tag.visible %}
    {%- assign tagItems = collections[tag.key] | sort: "date" | reverse %}
    {%- if tagItems.size > 0 %}
    <url>
      <loc>{{ pkg.homepage }}/changelog/tag/{{ tag.key }}/</loc>
      <lastmod>{{ tagItems[0].date | dateISO }}</lastmod>
      <changefreq>monthly</changefreq>
    </url>
    {%- endif %}
  {%- endif %}
{%- endfor %}
</urlset>